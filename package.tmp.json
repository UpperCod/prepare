{
    "name": "@atomico/exports",
    "type": "module",
    "version": "0.37.0",
    "description": "It allows to generate an export to quickly publish components created with Atomico in NPM",
    "main": "tests/atomico.js",
    "module": "tests/atomico.js",
    "types": "./types/cli.d.ts",
    "workspaces": [
        "tests"
    ],
    "exports": {
        ".": "tests/atomico.js",
        "./atomico": "tests/atomico.js",
        "./atomico/react": "wrappers/atomico/react.js",
        "./atomico/preact": "wrappers/atomico/preact.js",
        "./atomico/vue": "wrappers/atomico/vue.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "types": "tsc",
        "test": "ava",
        "prepare": "npm run test && npm run types"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicojs/exports.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atomicojs/exports/issues"
    },
    "homepage": "https://github.com/atomicojs/exports#readme",
    "dependencies": {
        "@types/node": "^14.14.41",
        "@uppercod/indentation": "latest",
        "acorn": "^8.8.0",
        "acorn-walk": "^8.1.0",
        "cac": "^6.7.12",
        "chokidar": "^3.5.3",
        "fast-glob": "latest"
    },
    "devDependencies": {
        "@atomico/react": "latest",
        "ava": "^4.3.3"
    },
    "ava": {
        "files": [
            "tests/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "endOfLine": "auto"
    },
    "bin": {
        "exports": "./src/cli.js"
    },
    "typesVersions": {
        "*": {
            "atomico/react": "wrappers/atomico/react.d.ts",
            "atomico/preact": "wrappers/atomico/preact.d.ts",
            "atomico/vue": "wrappers/atomico/vue.d.ts"
        }
    }
}