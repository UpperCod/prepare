{
    "name": "@atomico/exports",
    "type": "module",
    "version": "1.0.0-beta.2",
    "description": "It allows to generate an export to quickly publish components created with Atomico in NPM",
    "main": "./src/merge-exports.js",
    "module": "./src/merge-exports.js",
    "types": "./types/merge-exports.d.ts",
    "workspaces": [
        "tests"
    ],
    "exports": {
        "./cli": "./src/cli.js",
        "./create-exports": "./src/create-exports.js",
        "./create-wrapper": "./src/create-wrapper.js",
        "./merge-exports": "./src/merge-exports.js",
        "./utils": "./src/utils.js",
        ".": "./src/merge-exports.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "types": "tsc",
        "test": "rm -rf tests/dist && ava",
        "prepare": "npm run types && npm run test && node ./src/cli.js ./src/** ./types/** --main merge-exports"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicojs/exports.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atomicojs/exports/issues"
    },
    "homepage": "https://github.com/atomicojs/exports#readme",
    "dependencies": {
        "@uppercod/indentation": "latest",
        "acorn": "^8.8.0",
        "acorn-walk": "^8.1.0",
        "cac": "^6.7.12",
        "chokidar": "^3.5.3",
        "fast-glob": "latest"
    },
    "peerDependencies": {
        "@uppercod/indentation": "latest",
        "acorn": "^8.8.0",
        "acorn-walk": "^8.1.0",
        "cac": "^6.7.12",
        "chokidar": "^3.5.3",
        "fast-glob": "latest"
    },
    "devDependencies": {
        "@atomico/react": "latest",
        "@atomico/tsconfig": "^1.0.0",
        "@types/node": "^14.14.41",
        "ava": "^4.3.3",
        "typescript": "^4.8.4"
    },
    "ava": {
        "files": [
            "tests/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "endOfLine": "auto"
    },
    "bin": {
        "exports": "./src/cli.js"
    },
    "typesVersions": {
        "*": {
            "cli": [
                "./types/cli.d.ts"
            ],
            "create-exports": [
                "./types/create-exports.d.ts"
            ],
            "create-wrapper": [
                "./types/create-wrapper.d.ts"
            ],
            "merge-exports": [
                "./types/merge-exports.d.ts"
            ],
            "utils": [
                "./types/utils.d.ts"
            ]
        }
    }
}