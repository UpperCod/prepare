{
    "name": "@atomico/exports",
    "type": "module",
    "version": "1.11.2",
    "description": "It allows to generate an export to quickly publish components created with Atomico in NPM",
    "main": "./src/merge-exports.js",
    "module": "./src/merge-exports.js",
    "types": "./src/merge-exports.js",
    "workspaces": [
        "tests",
        "examples/**/*"
    ],
    "exports": {
        "./cli": "./src/cli.js",
        "./create-exports": "./src/create-exports.js",
        "./create-wrapper": "./src/create-wrapper.js",
        "./merge-exports": "./src/merge-exports.js",
        "./utils": "./src/utils.js",
        ".": "./src/merge-exports.js",
        "./create-centralize-packages": "./src/create-centralize-packages.js",
        "./create-publish": "./src/create-publish.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "types": "tsc",
        "test": "rm -rf tests/dist && ava",
        "prepare": "npm run types && npm run test && node ./src/cli.js ./src/** ./types/** --main merge-exports"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicojs/exports.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atomicojs/exports/issues"
    },
    "homepage": "https://github.com/atomicojs/exports#readme",
    "dependencies": {
        "@uppercod/clean-terminal": "^1.0.0",
        "acorn": "^8.8.0",
        "acorn-walk": "^8.1.0",
        "cac": "^6.7.12",
        "chokidar": "^3.5.3",
        "fast-glob": "^3.2.12"
    },
    "devDependencies": {
        "@atomico/react": "latest",
        "@atomico/tsconfig": "^1.1.2",
        "@types/node": "^14.14.41",
        "ava": "^4.3.3",
        "typescript": "^5.1.3"
    },
    "ava": {
        "files": [
            "tests/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "endOfLine": "lf"
    },
    "bin": {
        "exports": "./src/cli.js"
    },
    "typesVersions": {
        "*": {
            "cli": [
                "./src/cli.js"
            ],
            "create-exports": [
                "./src/create-exports.js"
            ],
            "create-wrapper": [
                "./src/create-wrapper.js"
            ],
            "merge-exports": [
                "./src/merge-exports.js"
            ],
            "utils": [
                "./src/utils.js"
            ],
            "create-centralize-packages": [
                "./src/create-centralize-packages.js"
            ],
            "create-publish": [
                "./src/create-publish.js"
            ],
            ".": [
                "./src/merge-exports.js"
            ]
        }
    },
    "peerDependencies": {
        "@atomico/react": "*",
        "@atomico/vue": "*"
    },
    "peerDependenciesMeta": {
        "@atomico/react": {
            "optional": true
        },
        "@atomico/vue": {
            "optional": true
        }
    }
}
