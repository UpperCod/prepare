{
    "name": "@atomico/exports",
    "type": "module",
    "version": "1.0.0-beta.0",
    "description": "It allows to generate an export to quickly publish components created with Atomico in NPM",
    "main": "./src/cli.js",
    "module": "./src/cli.js",
    "types": "./types/cli.d.ts",
    "workspaces": [
        "tests"
    ],
    "exports": {
        ".": "./src/cli.js"
    },
    "publishConfig": {
        "access": "public"
    },
    "scripts": {
        "test": "rm -rf tests/dist && ava",
        "prepare": "npm run test"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/atomicojs/exports.git"
    },
    "author": "UpperCod",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/atomicojs/exports/issues"
    },
    "homepage": "https://github.com/atomicojs/exports#readme",
    "dependencies": {
        "@uppercod/indentation": "latest",
        "acorn": "^8.8.0",
        "acorn-walk": "^8.1.0",
        "cac": "^6.7.12",
        "chokidar": "^3.5.3",
        "fast-glob": "latest"
    },
    "devDependencies": {
        "@atomico/react": "latest",
        "@types/node": "^14.14.41",
        "ava": "^4.3.3"
    },
    "ava": {
        "files": [
            "tests/**/*.test.js"
        ]
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": false,
        "endOfLine": "auto"
    },
    "bin": {
        "exports": "./src/cli.js"
    }
}
